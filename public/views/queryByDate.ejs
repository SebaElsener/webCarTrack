<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head') %>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
  </head>

  <body>
    <%- include('./partials/navMin') %>
    <div class="navBarSeparator"></div>

    <main id="main">
      <div class="container mt-5" id="title-date-input">
        <h3 class="formTitle">Consulta por rango de fechas</h3>

        <form id="form-fechas">
          <div id="inputGroup" class="input-group">
            <span class="input-group-text">ðŸ“…</span>
            <input
              type="text"
              id="rangoFechas"
              class="form-control"
              placeholder="Seleccionar fechas"
              readonly
            />
            <div class="btnFormContainer">
              <button id="btnFormSubmit" class="btn btn-primary" type="submit">
                Consultar
              </button>
            </div>
          </div>
        </form>
      </div>

      <div class="card mb-3 shadow-sm post-table-action" id="filtersCard">
        <div class="card-body">
          <div
            class="row g-3 align-items-top"
            style="justify-content: center; gap: 3rem"
          >
            <!-- Marca -->
            <div class="col-md-3">
              <label class="form-label fw-semibold">Marca</label>
              <select id="filtroMarca" class="form-select" multiple>
                <option value="">Todas</option>
              </select>
            </div>
            <!-- Modelo -->
            <div class="col-md-3">
              <label class="form-label fw-semibold">Modelo</label>
              <select id="filtroModelo" class="form-select" multiple>
                <option value="">Todos</option>
              </select>
            </div>

            <!-- Checks -->
            <div class="col-md-5">
              <label class="form-label fw-semibold">EstadÃ­sticas</label>
              <div class="d-flex gap-4 flex-wrap">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="chkTopAreas"
                  />
                  <label class="form-check-label" for="chkTopAreas">
                    Top 5 Areas daÃ±adas
                  </label>
                </div>

                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="chkTopAverias"
                  />
                  <label class="form-check-label" for="chkTopAverias">
                    Top 5 Tipos de daÃ±o
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="estadisticas" class="row g-3 mb-3"></div>

      <div
        class="justify-content-start align-items-center mt-2 mx-5 post-table-action"
        id="actionsBar"
      >
        <button
          id="btnLimpiarFiltros"
          class="btn btn-sm btn-outline-secondary ms-2"
        >
          Limpiar filtros
        </button>
        <div class="form-check form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            id="chkSoloConDanio"
          />
          <label class="form-check-label fw-semibold" for="chkSoloConDanio">
            Solo VIN con daÃ±o
          </label>
          <span id="badgeConDanio" class="badge bg-primary d-none"></span>
        </div>
        <div class="d-flex justify-content-end gap-3 mx-4">
          <button id="btnExportPdf" class="btn btn-outline-danger btn-sm">
            ðŸ“„ PDF
          </button>
          <button id="btnExportExcel" class="btn btn-outline-success btn-sm">
            ðŸ“Š Excel
          </button>
        </div>
      </div>

      <div id="tabla-wrapper" class="tabla-wrapper">
        <div id="tabla-scroll" class="tabla-scroll">
          <div id="resultados" class="container-fluid"></div>
        </div>
        <div id="paginacion" class="mt-3"></div>
      </div>

      <div id="evolucion" class="mt-4 mb-5"></div>
    </main>

    <%- include('./partials/footer') %>

    <script type="module" src="/js/querys.js"></script>
    <script src="/js/pageAnimation.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>
    <script>
      const rangoPicker = flatpickr("#rangoFechas", {
        mode: "range",
        dateFormat: "Y-m-d", // valor real
        altInput: true,
        altFormat: "d/m/Y", // visible
        locale: flatpickr.l10ns.es,
        appendTo: document.body, // ðŸ”¥ clave
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
    <!-- PDF -->
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.29/jspdf.plugin.autotable.min.js"></script> -->

    <!-- Excel -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

    <script>
      const choicesMarca = new Choices("#filtroMarca", {
        removeItemButton: true,
        placeholder: true,
        placeholderValue: "Buscar marca...",
        searchPlaceholderValue: "Buscar...",
        shouldSort: true,
        searchEnabled: true,
      });

      const choicesModelo = new Choices("#filtroModelo", {
        removeItemButton: true,
        placeholder: true,
        placeholderValue: "Buscar modelo...",
        searchPlaceholderValue: "Buscar...",
        shouldSort: true,
        searchEnabled: true,
      });
    </script>
  </body>
</html>
